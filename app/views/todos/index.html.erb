<p id="notice"><%= notice %></p>

<div class="container">

<h4 class="d-flex justify-content-center mt-5">Todo List</h4>

<table class = "table table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td class = "col-2"><%= todo.title %></td>
        <td class = "col-6"><%= todo.description %></td>
        <td class = "col-1"><%= link_to 'View', todo, class:"btn btn-outline-success col-12" %></td>
        <td class = "col-1"><%= link_to 'Edit', edit_todo_path(todo), class:"btn btn-outline-primary col-12" %></td>
        <td class = "col-1"><%= link_to 'Delete', todo, class:"btn btn-outline-danger col-12", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Todo', new_todo_path, class:"btn btn-lg btn-success" %>
</div>
