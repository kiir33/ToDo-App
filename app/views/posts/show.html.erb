<p id="notice"><%= notice %></p>

<div class="container">

<div class="d-flex justify-content-center h3">
<%= 'Post No.' + @post.id.to_s %>
</div>

<div class = "p-5 m-4 bg-secondary text-light rounded-3">

<p class="h3">
  <%= @post.title %>
</p>

<p class="h5 mt-4">
  <%= @post.body %>
</p>
</div>

<div class="d-flex justify-content-center mt-4">
<%= link_to 'Edit', edit_post_path(@post), class:"btn btn-outline-primary  me-2" %>
<%= link_to 'Back', posts_path, class:"btn btn-outline-primary  ms-2" %>
</div>

</div>
